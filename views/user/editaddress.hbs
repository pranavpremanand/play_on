<div class="container main">
<div class="row d-flex justify-content-center">
  <div class="col-md-5 mb-4">
    <div id="card" class="card mb-4">
      <div class="card-header py-3">
        <h5 class="mb-0 text-center">Edit Address</h5>
      </div>
      <div class="card-body">
        <form class="text-danger" id="form"
        {{!-- action="/edited-address/{{data._id}}" method="post" --}}
        >
          <!-- 2 column grid layout with text inputs for the first and last names -->
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline text-dark">
                <label class="form-label" for="form7Example1">Full name</label>
                <input name="fullName" value="{{data.fullName}}" required type="text" id="fullName" class="form-control text-dark" />
                
              </div>
            </div>
            {{!-- <div class="col">
              <div class="form-outline">
                <input type="text" id="form7Example2" class="form-control" />
                <label class="form-label" for="form7Example2">Last name</label>
              </div>
            </div> --}}
          </div>

          <!-- Number input -->
          <div class="form-outline mb-4 text-dark">
            <label class="form-label" for="form7Example6">Phone</label>
            <input name="mobile" value="{{data.mobile}}" required type="tel" id="mobile" class="form-control text-dark" />
            
          </div>

          <!-- Number input -->
          <div class="form-outline mb-4 text-dark">
                        <label class="form-label" for="form7Example6">Pincode</label>
            <input name="pincode" value="{{data.pincode}}" required type="tel" id="pincode" class="form-control text-dark" />

          </div>

          <!-- Text input -->
          <div class="form-outline mb-4 text-dark">
            <label class="form-label" for="form7Example3">Flat, House no., Building, Company, Apartment</label>
            
            <input name="building"  value="{{data.building}}" required class="form-control text-dark" id="building" rows="3"></input>
            
          </div>

          <!-- Text input -->
          <div class="form-outline mb-4 text-dark">
            <label class="form-label" for="form7Example4">Area, Street, Sector, Village</label>
            <input name="area" value="{{data.area}}" required type="text" id="area" class="form-control text-dark" />

          </div>

          <!-- Email input -->
          <div class="form-outline mb-4 text-dark">
            <label class="form-label" for="form7Example5">Landmark</label>
            <input name="landmark" value="{{data.landmark}}" required type="text" id="landmark" class="form-control text-dark" />
            
          </div>

          <!-- Message input -->
          <div class="form-outline mb-4 text-dark">
            <label class="form-label" for="form7Example7">District</label>
            <input name="district" value="{{data.district}}" required type="text" id="district" class="form-control text-dark" />
            
          </div>

          <!-- Checkbox -->
          <div class="form-check d-flex justify-content-center mb-2">
            <button onclick="updateAddress('{{data._id}}')" type="submit" style="width: 100%;" class="btn btn-danger">Submit</button>
            {{!-- <input class="form-check-input me-2" type="checkbox" value="" id="form7Example8" checked /> --}}
            {{!-- <label class="form-check-label" for="form7Example8"> --}}
              {{!-- Create an account? --}}
            {{!-- </label> --}}
          </div>
        </form>
      </div>
    </div>
  </div>
