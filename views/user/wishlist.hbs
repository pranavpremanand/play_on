<section class="h-100 h-custom" style="background-color: #FFFFFF;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div id="products">
        {{#if wishlistItems}}
        <div class="card card-registration card-registration-2"
         style="border-radius: 15px;"
         >
         {{else}}
         <div class="mt-5"
         >
         {{/if}}
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-lg-12">
                
                  {{#if wishlistItems}}
                <div class="p-5">
                  <div class="d-flex justify-content-center align-items-center">
                    
                    <h4 class="fw-bold mb-0 text-black mr-2">My Wishlist</h4>
                    <i style="font-size: 1.5em;" class="text-danger fa fa-heart" aria-hidden="true"></i>
                    {{!-- <h6 id="cart-items" class="mb-0 text-muted"></h6> --}}
                  </div>
                  {{!-- <span id="cart-items" class="mb-0 text-muted"></span><span class="text-muted">&nbsp; items</span> --}}
                  {{!-- <hr class="my-4"> --}}


                  <hr class="my-4">

                  <div class="row mb-4 d-flex justify-content-evenly align-items-center">
                    {{#each wishlistItems}}
                    <div class="col-md-1 col-lg-1 col-xl-2 text-center mb-2">
                       {{!-- <a href="/removeFromCart/{{this.productID._id}}" class="text-muted"><i class="fa fa-trash-o"></i></a> --}}
                      <a onclick="removeFromWishlist('{{this.productID._id}}')" class="text-muted"><i style="font-size: 1.2rem; color:rgb(255, 0, 0);" class="fa fa-trash-o"></i></a>
                        {{!-- <button style="border: none; border-radius:20 ; background-color: transparent;" onclick="removeFromCart('{{this.productID._id}}')"  class="text-muted"><i class="fa fa-trash-o"></i></button> --}}
                    </div>
                    <div class="col-md-2 col-lg-2 col-xl-2 mb-2">
                      <a href="/singleProduct/{{this.productID._id}}"><img
                        style="width:70px ;" src="/images/products/{{this.productID.images.[0]}}"
                        class="img-fluid rounded-3" alt=""></a>
                    </div>
                    <div class="col-md-4 col-lg-3 col-xl-3 mb-2">
                      {{!-- <h6 class="text-muted">{{this.productID.category}}</h6> --}}
                      <h6 class="text-black">{{this.productID.name}}</h6>
                      {{!-- <h6>{{../ID}}</h6> --}}
                    </div>
                    <div class="col-md-2 col-lg-2 col-xl-2 offset-lg-1 mb-2">
                      <h6 class="mb-0">â‚¹{{this.productID.sellingPrice}}</h6>
                    </div>
                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex mb-2">
                    
                      <div class="d-flex flex-row">
                       
                        {{!-- {{#if (gt this.quantity 1)}}
                    <button class="btn btn-link px-2"
                      onclick="changeQuantity('{{this.productID._id}}','{{../ID}}',-1)">
                      <i class="fa fa-minus-circle text-secondary" aria-hidden="true"></i>
                    </button>
                    {{else}}
                     <button disabled class="btn btn-link px-2"
                      onclick="changeQuantity('{{this.productID._id}}','{{../ID}}',-1)">
                      <i class="fa fa-minus-circle text-secondary" aria-hidden="true"></i>
                    </button>
                    {{/if}} --}}
                    
                    {{!-- <span id="{{this.productID._id}}" name="quantity" type="number"
                      class="text-center form-control form-control-sm text-dark" style="width: 40px;">{{this.quantity}}</span> --}}
                    
                    <button onclick="addToCart('{{this.productID._id}}')" class="btn btn-outline-info px-2 btn-sm">ADD TO CART
                    </button>
                  </div>
                    </div>
                    
                    
                    {{/each}}
                    </div>
                  </div>
