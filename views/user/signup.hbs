    <section class="vh-100 custom-gradient">

      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-6 text-black">
            <div
              class="d-flex justify-content-center align-items-center h-custom-2 px-5 ms-xl-4 mt-3 pt-4 pt-xl-0 mt-xl-n5">
              <form class="text-danger" method="post" action="/userSignedup" style="width: 23rem;" id="form">
                <h3 class="login text-white font-weight-bold fw-normal mb-2 pb-1 text-center"
                  style="letter-spacing: 1px;">Signup</h3>

                <div class="form-outline mb-2">
                  <input name="name" required placeholder="Username" type="text" id="name"
                    class="form-control text-dark form-control-lg" />
                  {{! <label class="text-white form-label" for="form2Example18">Username</label> }}
                </div>
                <div class="form-outline mb-2">
                  <input name="phoneNumber" required placeholder="Phone number" type="tel" id="phoneNumber"
                    class="form-control text-dark form-control-lg" />
                  {{! <label class="text-white form-label" for="form2Example18">Phone Number</label> }}
                </div>

                <div class="form-outline text-dark mb-2">
                  <input name="email" required placeholder="Email address" type="email" id="email"
                    class="form-control text-dark form-control-lg" />
                  {{! <label class="text-white form-label" for="form2Example18">Email address</label> }}
                </div>

                <div class="form-outline text-dark mb-2">
                  <input name="password" required placeholder="Password" type="password" id="password"
                    class="form-control text-dark form-control-lg" />
                  {{! <label class="text-white form-label" for="form2Example28">Password</label> }}
                </div>

                <div class="form-outline text-dark mb-3">
                  <input name="reEnteredPassword" required placeholder="Re-enter password" type="password"
                    id="form2Example28" class="form-control text-dark form-control-lg" />
                  {{! <label class="text-white form-label" for="form2Example28">Re-enter Password</label> }}
                </div>
                {{#if incorrectPassword}}
                <h5 style="text-transform:none ;" class="error text-danger pt-2">Re-entered password is incorrect.</h5>
                {{/if}}
                {{#if existingUser}}
                <h5 style="text-transform:none ;" class="text-danger pt-2 error">{{userExist}}</h5>
                {{/if}}
                <div class="pt-1 mb-1">
                  <button class="btn btn-danger btn-lg btn-block" type="submit">Signup</button>
                </div>

                <p class="text-white mt-3">Already have an account?
                  <a href="toLogin" class="link-info">Login here</a>
                </p>

              </form>
            </div>
          </div>

        </div>
        {{! <div class="col-sm-6 px-0 d-none d-sm-block">
          <img src="images/messi-bicycle-kick-0807-restricted-exlarge-169.jpg" alt="Login image" class="w-100 vh-100"
            style="object-fit: cover; object-position: left;">
        </div> }}
      </div>
    </section>
  </div>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js">
  </script>
  <script type="text/javascript"
    src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>

  <script>
    
      $("#form").validate({
        rules: {
          name: {
            required: true
          },
          phoneNumber: {
            required: true,
            digits: true,
            minlength: 10,
            maxlength: 10
          },
          email: {
            required: true,
            email: true
          },
          password: {
            required: true,
            minlength: 6
          },
          reEnteredPassword: {
            equalTo: '#password'
          }
        },
        messages: {
          name: {
            required: 'Enter your name'
          },
          phoneNumber: {
            required: 'Enter your phone number',
            digits: 'Enter your valid phone number',
            minlength: 'Entered phone number is incorrect',
            maxlength: 'Entered phone number is incorrect'
          },
          email: {
            required: 'Enter your email number',
            email: 'Entered email is not valid',
            noCaps: 'Entered email is not valid'
          },
          password: {
            required: 'Enter your password',
            minlength: 'Minimum password length is 6'
          }
        }

      })
    

  </script>
