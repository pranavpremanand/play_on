            <!-- Form Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h5 class="mb-3">Add Coupon</h5>
                            <form class="text-danger" id="couponForm"
                            {{!-- action="/admin/coupon-added" method="post" --}}
                            >
                                <div class="mb-3 text-light">
                                    <label for="" class="form-label">Enter coupon name here</label>
                                    <input placeholder="" type="text"  class="text-uppercase form-control" name="name" id="name"
                                        aria-describedby="" style="width: 60%;">
                                    {{!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.
                                    </div> --}}
                                </div>
                                 <div class="mb-3 text-light">
                                    <label for="" class="form-label">Enter discount percentage here</label>
                                    <input placeholder="" type="text"  class="form-control" name="discount" id="discount"
                                        aria-describedby="" style="width: 60%;">
                                    {{!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.
                                    </div> --}}
                                </div>
                                <div class="mb-3 text-light">
                                    <label for="" class="form-label">Enter coupon code here</label>
                                    <input placeholder="" type="text"  class="text-uppercase form-control" name="code" id="code"
                                        aria-describedby="" style="width: 60%;">
                                    {{!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.
                                    </div> --}}
                                </div>
    
                                <button 
                                {{!-- type="submit" --}}
                                onclick="addCoupon()";
                                {{!-- "submit" --}}
                                 class="btn btn-primary mt-2 btn-sm">Submit</button>
                            </form>
                        </div>
                    </div>
            </div>

        </div>

       
    </div>
