<script
  type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js">
  </script>
<script>
  $("#couponForm").validate({
    rules:{
        name:{
            required:true,
            unique:true
        },
        code:{
            required:true
        },
        discount:{
            required:true,
            digits:true
        }
    },
    messages:{
        name:{
            required:"Enter coupon name",
            unique:"This name is already exist"
        },
        code:{
            required:"Enter coupon code"
        },
        discount:{
            required:'Enter discount',
            digits:"Only digits are allowed"
        }
    }
  })
</script>
