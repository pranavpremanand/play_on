  </div>
  </div>

  <!-- Main content -->
  <div class="row d-flex justify-content-center">
    <div class="col-lg-10">
      <!-- Details -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="mb-3 d-flex justify-content-between">
            <div>
              <span class="me-3 text-white">{{orderData.date}}</span>
              {{!-- <span class="me-3">#16123222</span> --}}
              {{!-- <span class="me-3">Visa -1234</span> --}}
              <span class="badge ml-2 rounded-pill bg-info text-white">{{orderData.orderStatus}}</span>
            </div>
            <div class="d-flex">
              <button class="btn btn-link p-0 me-3 d-none d-lg-block btn-icon-text"><i class="bi bi-download"></i> <span class="text">Invoice</span></button>
              <div class="dropdown">
                <button class="btn btn-link p-0 text-muted" type="button" data-bs-toggle="dropdown">
                  <i class="bi bi-three-dots-vertical"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                  {{!-- <li><a class="dropdown-item" href="#"><i class="bi bi-pencil"></i> Edit</a></li>
                  <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i> Print</a></li> --}}
                </ul>
              </div>
            </div>
          </div>
          <table class="table table-borderless">
            <tbody>
                {{#each orderData.products}}
              <tr>
                <td>
                  <div class="d-flex mb-3 justify-content-center align-items-center">
                    <div class="flex-shrink-0">
                      <img src="/images/products/{{this.productID.images.[0]}}" alt="" width="40" class="img-fluid">
                    </div>
                    
                    <div class="flex-lg-grow-1 ms-3 ml-3 d-flex align-items-center">
                      <h6 class="medium mb-0"><a class="text-reset">{{this.productID.name}}</a></h6>
                      {{!-- <span class="small">Color: Black</span> --}}
                    </div>
                    <div class="flex-lg-grow-1 ms-3 ml-3 d-flex justify-content-between align-items-right">
                <td class="medium mb-0" style="color: white;">
                    <a class="text-reset text-white">{{this.quantity}}</a>
                    </td>
                <td style="color: white;" class="medium mb-0">
                    <a class="text-reset text-white"><span class="currenc">₹ </span>{{multiplyAmount this.productID.sellingPrice this.quantity}}</a>
                    </td>
                </div>
                  </div>
                </td>
                {{!-- <div class="d-flex"> --}}

                {{!-- </div> --}}
              </tr>
              {{/each}}
              {{!-- <tr>
                <td>
                  <div class="d-flex mb-2">
                    <div class="flex-shrink-0">
                      <img src="https://via.placeholder.com/280x280/FF69B4/000000" alt="" width="35" class="img-fluid">
                    </div>
                    <div class="flex-lg-grow-1 ms-3">
                      <h6 class="small mb-0"><a href="#" class="text-reset">Smartwatch IP68 Waterproof GPS and Bluetooth Support</a></h6>
                      <span class="small">Color: White</span>
                    </div>
                  </div>
                </td>
                <td>1</td>
                <td class="text-end">$79.99</td>
              </tr> --}}
            </tbody>
            <tfoot>
              <tr>
                <td colspan="2 text-white" style="color: white;">Subtotal</td>
                <td class="text-end text-white"><span class="currenc">₹ </span>{{orderData.totalCost}}</td>
              </tr>
              <tr>
                <td colspan="2" style="color: white;">Shipping</td>
                <td class="text-end text-success">FREE</td>
              </tr>
              <tr>
                <td colspan="2 text-white" style="color: white;">Discount (Code: {{orderData.coupon}})</td>
                <td class="text-danger text-end">- <span class="currenc">₹ </span>{{amountFormat orderData.discount}}</td>
                <hr>
              </tr>
              <tr class="fw-bold">
                <td colspan="2 text-white" style="color: white;">TOTAL</td>
                <td class="text-end text-white"><span class="currenc">₹ </span>{{amountFormat orderData.finalCost}}</td>
              </tr>
              {{#twoConditions orderData.paymentStatus "Confirmed" orderData.orderStatus "Delivered"}}
                <td></td>
                {{else}}
                <tr class="">
                <td colspan="2"></td>
                <td class="text-center"><a style="" onclick = "cancelOrder('{{orderData._id}}')" class="text-white btn btn-danger btn-sm mt-2">Cancel Order</a></td>
                </tr>
                {{!-- <div class="d-flex align-items-center justify-content-center"><td><button class="btn btn-sm btn-outline-danger" onclick="cancelOrder('{{this._id}}')">Cancel</button></td></div> --}}
                {{/twoConditions}}
            </tfoot>
          </table>
