    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/adminStyles/admin/lib/chart/chart.min.js"></script>
    <script src="/adminStyles/admin/lib/easing/easing.min.js"></script>
    <script src="/adminStyles/admin/lib/waypoints/waypoints.min.js"></script>
    <script src="/adminStyles/admin/lib/owlcarousel/owl.carousel.min.js"></script>
